<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.MusicPlayActivity">
    <ImageView
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/back_btn_song_playing"
        android:src="@drawable/ic_baseline_keyboard_backspace_24"/>
    <ImageView
        android:id="@+id/thumbnail_song_playing"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_marginTop="100dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@tools:sample/avatars" />
    <TextView
        android:id="@+id/title_song_playing"
        android:layout_width="300dp"
        android:layout_marginTop="30dp"
        android:textSize="30dp"
        android:textStyle="bold"
        android:layout_height="wrap_content"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/thumbnail_song_playing"
        android:scrollHorizontally="true"
        android:ellipsize="end"
        android:maxLines="1"/>
    <TextView
        android:id="@+id/artist_song_playing"
        android:layout_width="300dp"
        android:textSize="20dp"
        android:layout_height="wrap_content"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/title_song_playing"/>
    <ImageView
        android:id="@+id/fav_btn"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/ic_baseline_favorite_border_24"
        app:layout_constraintBottom_toTopOf="@id/seek_bar"
        app:layout_constraintLeft_toLeftOf="@id/seek_bar"/>
    <SeekBar
        android:layout_marginTop="40dp"
        app:layout_constraintTop_toBottomOf="@id/artist_song_playing"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:id="@+id/seek_bar"
        android:layout_width="300dp"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/text_start_time"
        app:layout_constraintTop_toBottomOf="@id/seek_bar"
        app:layout_constraintLeft_toLeftOf="@id/seek_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/text_song_time"
        app:layout_constraintTop_toBottomOf="@id/seek_bar"
        app:layout_constraintRight_toRightOf="@id/seek_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <LinearLayout
        android:layout_marginTop="100dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/artist_song_playing"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">
        <ImageView
            android:layout_gravity="center"
            android:id="@+id/play_pre"
            android:src="@drawable/ic_baseline_skip_previous_24"
            android:layout_width="50dp"
            android:layout_height="50dp"/>
        <ImageView
            android:id="@+id/pause"
            android:layout_marginRight="40dp"
            android:layout_marginLeft="40dp"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:src="@drawable/ic_baseline_play_circle_filled_24" />
        <ImageView
            android:layout_gravity="center"
            android:id="@+id/play_next"
            android:src="@drawable/ic_baseline_skip_next_24"
            android:layout_width="50dp"
            android:layout_height="50dp"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>